<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextAppearanceBase" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/appTextColor</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/appTextColor</item>
    </style>

    <style name="TextAppearance.Small" parent="TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/appTextColor</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/appTextColor</item>
    </style>

    <style name="TextAppearance.Large" parent="TextAppearance.AppCompat.Large">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/appTextColor</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">@null</item>
        <item name="titleTextColor">@color/appTextColor</item>
    </style>

    <style name="Widget.App.Toolbar.WithBackButton" parent="Widget.App.Toolbar">
        <item name="navigationIcon">@drawable/ic_navigate_before_black_24dp</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="TextAppearance.Material.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Small</item>
        <item name="android:textColor">@color/appTextColor</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

    <style name="TextAppearance.Material.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/appTextColor</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">@color/appTextColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Small</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

    <style name="TextAppearance.Material.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/appTextColor</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Small</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

    <style name="Widget.App.TextInputLayout.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/grey</item>
        <item name="android:textColorHint">@color/appTextColor</item>
        <item name="android:textColor">@color/appTextColor</item>
        <item name="hintTextColor">@color/appTextColor</item>
        <item name="errorEnabled">true</item>
        <item name="counterEnabled">false</item>
        <item name="helperTextEnabled">false</item>
        <item name="android:theme">@style/exampleCursor</item>
    </style>

    <style name="exampleCursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/appTextColor</item>
    </style>

</resources>
